<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
  <Fragment>
    <Feature Id="MSBuildIntegration"
             Title="MSBuild Integration"
             AllowAdvertise="no"
             Absent="disallow"
             Level="1">
      <ComponentGroupRef Id="MSBuildIntegration" />
      <ComponentGroupRef Id="Rules" />
    </Feature>

    <DirectoryRef Id="TARGETDIR">
      <Directory Id="ProgramFilesFolder">
        <Directory Id="MSBuild" Name="MSBuild">
          <Directory Id="INSTALLDIR" Name="NuProj">
              <Directory Id="Rules" Name="Rules" />
          </Directory>
          <Directory Id="MSBuild120" Name="12.0">
            <Directory Id="Microsoft.Common.Targets.120" Name="Microsoft.Common.Targets">
              <Directory Id="Microsoft.Common.Targets.ImportAfter.120" Name="ImportAfter" />
            </Directory>
          </Directory>
        </Directory>
      </Directory>
    </DirectoryRef>

    <ComponentGroup Id="MSBuildIntegration">
      <Component Directory="INSTALLDIR">
        <File Source="$(var.SolutionDir)packages\NuGet.CommandLine.2.8.2\tools\NuGet.exe" />
      </Component>
      <Component Directory="INSTALLDIR">
        <File Source="$(var.NuProj.Tasks.TargetDir)Additional\NuProj.targets" />
      </Component>
      <Component Directory="INSTALLDIR">
        <File Source="$(var.NuProj.Tasks.TargetDir)Additional\NuProj.props" />
      </Component>
      <Component Directory="Microsoft.Common.Targets.ImportAfter.120">
        <File Source="$(var.NuProj.Tasks.TargetDir)Additional\Microsoft.Common.NuProj.targets" />
      </Component>
      <Component Directory="INSTALLDIR">
        <File Source="$(var.NuProj.Tasks.TargetDir)NuProj.Tasks.dll" />
      </Component>
      <Component Directory="INSTALLDIR">
        <File Source="$(var.NuProj.Tasks.TargetDir)NuGet.Core.dll" />
      </Component>
      <Component Directory="INSTALLDIR">
        <File Source="$(var.NuProj.Tasks.TargetDir)Microsoft.Web.XmlTransform.dll" />
      </Component>
    </ComponentGroup>
    <ComponentGroup Id="Rules" Directory="Rules">
      <Component>
        <File Source="$(var.SolutionDir)NuProj.Package\Rules\content.xaml" />
      </Component>
      <Component>
        <File Source="$(var.SolutionDir)NuProj.Package\Rules\folder.xaml" />
      </Component>
      <Component>
        <File Source="$(var.SolutionDir)NuProj.Package\Rules\general.browseobject.xaml" />
      </Component>
      <Component>
        <File Source="$(var.SolutionDir)NuProj.Package\Rules\general.xaml" />
      </Component>
      <Component>
        <File Source="$(var.SolutionDir)NuProj.Package\Rules\none.xaml" />
      </Component>
      <Component>
        <File Source="$(var.SolutionDir)NuProj.Package\Rules\ProjectItemsSchema.xaml" />
      </Component>
      <Component>
        <File Source="$(var.SolutionDir)NuProj.Package\Rules\ProjectReference.xaml" />
      </Component>
      <Component>
        <File Source="$(var.SolutionDir)NuProj.Package\Rules\ResolvedProjectReference.xaml" />
      </Component>
      <Component>
        <File Source="$(var.SolutionDir)NuProj.Package\Rules\scc.xaml" />
      </Component>
    </ComponentGroup>
  </Fragment>
</Wix>